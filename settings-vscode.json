{
	// set WSL as the default terminal when VS code opens
	"terminal.integrated.shell.windows": "C:\\Users\\CHARITH\\AppData\\Local\\Microsoft\\WindowsApps\\ubuntu.exe",
	"C_Cpp.updateChannel": "Insiders",
	"debug.onTaskErrors": "debugAnyway",

	"workbench.startupEditor": "welcomePage",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorTheme": "One Dark Pro",
	"workbench.preferredLightColorTheme": "Default Light+",
	"workbench.preferredDarkColorTheme": "One Dark Pro",
	"window.autoDetectColorScheme": true,
	"window.restoreWindows": "none",
	"window.zoomLevel": 1,
	"editor.fontWeight": "normal",
	"editor.fontFamily": "JetBrainsMono Nerd Font",
	"editor.formatOnSave": true,
	"editor.formatOnType": false,
	"editor.formatOnPaste": false,
	"editor.quickSuggestions": {
		"strings": false
	},
	"explorer.sortOrder": "type",
	"css.validate": false,
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 500,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// prettier settings
	"prettier.printWidth": 80,
	"prettier.singleQuote": true,
	"prettier.useTabs": true,
	"prettier.jsxSingleQuote": true,
	"prettier.jsxBracketSameLine": true,
	//code runner settings
	"code-runner.executorMap": {
		"javascript": "/home/charith/.nvm/versions/node/v14.16.0/bin/node",
		"java": "/usr/bin/javac",
		"c": "cd $dir && gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
		"c++": "g++ $fullFileName && ./a.out"
	},
	"code-runner.runInTerminal": true,
	"editor.fontLigatures": true,
	"editor.suggest.localityBonus": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"files.simpleDialog.enable": true,
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"workbench.editorAssociations": {
		"*.ipynb": "jupyter.notebook.ipynb"
	},
	"python.formatting.provider": "black",
	"[vue]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
